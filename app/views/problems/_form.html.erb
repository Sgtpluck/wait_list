<div class= "greeting">
  <h3>Hi <%= current_adie.name %>!</h3>
</div>

<% @problem.errors.full_messages.each do |error| %>
  <%= error %><br>
<% end %>

<div class='ui form'>
<%= form_for @problem, url: new_problem_path do |f| %>
<div class="ui dropdown">
  <%= f.label :type, "What type of problem are you having?" %><br>
  <%= f.select(:type, ['Rails','Ruby','CSS/HTML','JavaScript','Other'], class: 'item') %> <br><br>
</div>
<div class='field'
  <%= f.label :description, "Tell me your woes:" %><br>
  <%= f.text_field :description %><br><br>
</div>
<div class='field'>
  <%= f.label :estimate, "Estimated time to solve the problem: (BE HONEST.)" %><br>
  <%= f.select(:estimate, ['5 minutes','20 minutes','45 minutes','possibly hours','Not Sure','someone have mercy on my soul'])%> <br><br>
</div>
  <%= f.submit 'Help me plz!', class: 'ui button' %>
<% end %>

<% if current_adie.provider %>
  
  <div class= 'tweet'>
    <%= form_tag(tweet_path, :class =>"navbar-form", method: 'post', type: 'text') do %>
      <div class="ui icon input">
        <%= text_field_tag :tweet, "", placeholder: "Post to Twitter", size: "50", maxlength: "140" %>
        <i class="twitter icon"></i>
      </div>
      <%= submit_tag("Tweet!", class: 'circular ui tiny twitter button') %>
    <% end %>
  </div>
<% end %>
